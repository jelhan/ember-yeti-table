<DocsHero
  @logo="ember"
  @slimHeading="Yeti"
  @strongHeading="Table"
  @byline="Lightweight and flexible tables addon.">
  {{svg-jar "yeti" width="100px" class="docs-mt-12 docs-mx-auto"}}
</DocsHero>

<div class="docs-container docs-md">
  <section class="docs-max-w-md docs-mx-auto docs-pb-8">

    {{!-- template-lint-disable no-curly-component-invocation --}}
    <DocsDemo class="docs-flex docs-flex-row" as |demo|>
      <demo.example @name="index-example.hbs">

        <YetiTable @data={{this.data}} as |t|>

          <t.header as |h|>
            <h.column @prop="firstName">
              First name
            </h.column>
            <h.column @prop="lastName">
              Last name
            </h.column>
            <h.column @prop="points">
              Points
            </h.column>
          </t.header>

          <t.body/>

        </YetiTable>

      </demo.example>

      <demo.snippet @name="index-example.hbs" />
    </DocsDemo>

    <div class="docs-my-16 docs-text-right">
      <LinkTo
        @route="docs"
        class="docs-bg-brand docs-hover:docs-bg-black docs-text-white docs-py-2 docs-px-4 docs-no-underline docs-rounded"
      >
        Read the docs â†’
      </LinkTo>
    </div>
  </section>
</div>